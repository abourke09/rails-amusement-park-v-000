<%= form_tag ({controller: 'users', action: 'create', method: 'post'}) do %>

  <%= label_tag(:name, "Name") %> <br>
  <%= text_field_tag(:name) %>
  <br></br>

  <%= label_tag(:height, "Height (in inches)") %> <br>
  <%= text_field_tag(:height) %>
  <br></br>

  <%= label_tag(:happiness, "How happy are you? (1-5 scale)") %> <br>
  <%= text_field_tag(:happiness) %>
  <br></br>

  <%= label_tag(:nausea, "How nauseous are you? (1-5 scale)") %> <br>
  <%= text_field_tag(:nausea) %>
  <br></br>

  <%= label_tag(:tickets, "How many dollars are in your pocket?") %> <br>
  <%= text_field_tag(:tickets) %>
  <br></br>

  <%= label_tag(:admin, "Check box if you are a theme park owner") %>
  <%= check_box_tag(:admin) %>
  <br></br>

  <%= label_tag(:password, "Password") %> <br>
  <%= text_field_tag(:password) %>
  <br></br>

  <input type=submit value='Create User'>

<% end %>
